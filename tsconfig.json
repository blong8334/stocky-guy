{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist/",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "pretty": true,
    "strictNullChecks": false,
    "allowJs": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}